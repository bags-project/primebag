{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}

{# FEMME #}
<div id="gallery-jumbotron-femme" class="card card-image">
    <div class="text-white text-center py-5 px-4 my-5">
        <div>
            <h2 id="gallery-title" class="card-title h1-responsive pt-3 mb-5 font-bold"><strong>Femme</strong></h2>
        </div>
    </div>
</div>

<main id="gallery-main">

    <div class="container">

        <div id="gallery-filtres" class="row">

            <div class="brand-filtre">

                {% include 'article/gallery/filtres.html.twig' %}

                <hr>

                {# GALLERY #}
                <div id="gallery-display" class="row">

                    {% for article in articles %}

                    {% if article.categories[0].name == 'Femme' %}

                    <div class="gallery-card" style="width: 18rem;">
                        <div>
                            <img class="card-img-top" src="../../assets/img/poster/{{ article.poster }}" alt="Card image cap">
                        </div>

                        <div class="card-body">
                            <div>
                                <h5 class="card-title">{{article.name}}</h5>
                                {# <h4 class="card-title">{{article.brand.id}}</h4> #}
                            </div>
                            <hr>
                            <div class="card-price">
                                <h2>{{article.price}}</h2>
                                <i class="fas fa-euro-sign"></i>
                            </div>

                            <div class="card-buttons">
                                <a href="{{ path('article_display' , {'id': article.id}) }}" class="btn btn-primary btn-lg active btn-sm"
                                    role="button" aria-pressed="true">DÃ©tails</a>
                                <a href="#" class="btn btn-primary btn-lg active btn-sm" role="button" aria-pressed="true">Panier</a>
                            </div>

                        </div>
                    </div>

                    {% endif %}

                    {% endfor %}

                </div>
</main>

{% endblock %}